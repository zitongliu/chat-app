<aside class="left-container">
  <h4>Channels</h4>
  <ul>
    <% @chatrooms.each do |chatroom| %>
      <li><%= link_to("#{chatroom.name}",chatroom_path(chatroom) ) %></li>
    <% end %>
  </ul>
  <h4>Members</h4>
  <% @team.users.each do |user| %>
    <li><%= user.name %></li>
  <% end %>

</aside>

<section class="right-container">
  <div class="container main-container">
    <div class="chatroom-title-container">
      <h1><%= @chatroom.name %></h1>
      <div class="controls">
        <%= link_to "Delete Chatroom", chatroom_path( @chatroom ), :method => :delete, :data => { :confirm => "Are you sure?" } %>
      </div>
    </div>


    <div class="chatroom-content-container">
      <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
        <% @chatroom.messages.each do |message| %>
          <%= render :partial => "messages/message", locals: { message: message } %>
          <!-- <div class="row">
            <div class="three columns">
              <p><%#= message.user.username %></p>
            </div>
            <div class="nine columns">
              <p><%= message.content %></p>
            </div>

          </div> -->
        <% end %>
      </div>
    </div>
    <div class="chatroom-input-container">
      <form>
        <input placeholder="Say something..." type="text" class="socket-input" data-behavior="chatroom_speaker">
      </form>
    </div>


  </div>
</section>
